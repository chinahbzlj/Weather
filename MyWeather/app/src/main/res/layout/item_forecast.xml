<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/item_forecast_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期一"

        android:textSize="@dimen/text_size_more_large" />

    <ImageView
        android:id="@+id/item_forecast_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forecast_highest_temperatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="@dimen/text_size_more_large" />

        <TextView
            android:id="@+id/forecast_lowest_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/gray153"
            android:textSize="@dimen/text_size_more_large" />
    </LinearLayout>
</RelativeLayout>